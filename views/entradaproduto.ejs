<%- include('partials/header') %>

<style>
  #rowMestra {
    max-width: 99%;
    margin-left: 1%
  }

  #titulo {
    text-align: center;
  }

  .validadeInput {
    width: 100%;
    height: 57px;
  }

  #validadeDescritivo {
    font-size: 14px;
    padding-top: 0;
    padding-left: 2px;
  }

  .validadeDiv {
    border-color: gray;
    background-clip: padding-box;
    opacity: .50;
  }
</style>

<form action="/entradaproduto" method="post" class='mb-3'>
  <div class="row" id='rowMestra'>
    <div class="row" id='descritivoCadastro'>
      <div class="col-lg-12 mt-2" id='titulo'>
        <h3 class='descritivoCadastro'>Entrada de Produto</h3>
      </div>
    </div>
    <div class="row" id='rowTerceira'>
      <div class="col-lg">
        <div class="form-floating">
          <select class="form-select" id="classificacaoSelect" aria-label="Floating label" name="nome">
            <%  produto.forEach(function(produtos){ %>
            <option class='valor'><%=produtos.nome%></option>
            <% }) %>
          </select>
          <label for="classificacaoSelect">Produto:</label>
        </div>
      </div>
    </div>
    <div class="row mt-2">
      <div class="row mt-2" id='segundaRow'>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="loteInput" type='text' name="lote">
            <label for="loteInput">Lote:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating validadeDiv">
            <input type="date" name="validade" class='validadeInput'>
            <label for="dataValidade" id='validadeDescritivo'>Data de validade:</label>
          </div>
        </div>
      </div>
      <div class="row mt-2" id='rowQuarta'>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="icmsInput" type='number' name='quantidade'>
            <label for="icmsInput">Quantidade:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="ipiInput" type='number' >
            <label for="ipiInput">Número da NF:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="pisInput" type='number'>
            <label for="pisInput">Número do Pedido:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="icmsInput" type='number' >
            <label for="icmsInput">Preço de Compra:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="cfopInput" type='number' max='4' >
            <label for="cfopInput">CFOP:</label>
          </div>
        </div>
      </div>
      <div class="row mt-2" id='rowSexta'>
        <div class="col-lg">
          <div class="form-floating">
            <select class="form-select" id="unSelect" aria-label="Floating label">
              <option value="1"></option>
              <option value="1">UN</option>
              <option value="2">KG</option>
              <option value="3">PCT</option>
              <option value="3">CAIXA</option>
            </select>
            <label for="unSelect">Unidade:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="pesobrutoInput" type='number' >
            <label for="pesobrutoInput">Peso Bruto:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="pesoliquidoInput" type='number' >
            <label for="pesoliquidoInput">Peso Líquido:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="comprimentoInput" type='number'>
            <label for="comprimentoInput">Comprimento:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="larguraInput" type='number'>
            <label for="larguraInput">Largura:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="alturaInput" type='number'>
            <label for="alturaInput">Altura:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="diametroInput" type='number'>
            <label for="diametroInput">Diâmetro:</label>
          </div>
        </div>
      </div>
      <div class="row mt-2" id='rowSetima'>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="customedioInput" type='number'>
            <label for="customedioInput">Custo Médio:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="custoteoricoInput" type='number'>
            <label for="custoteoricoInput">Custo Teórico:</label>
          </div>
        </div>
        <div class="col-lg">
          <div class="form-floating">
            <input class="form-control" id="custovigenteInput" type='number'>
            <label for="customedioInput">Custo Vigente:</label>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button type="submit" id='botaoSalva' class="btn btn-success mt-2" style='margin-left: 46%;'>Salvar</button>
</form>


<%- include('partials/footer') %>
