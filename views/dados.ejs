<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Dados</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/dados" method="POST" autocomplete="off">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username" value='<%=username%>' readonly>
            </div>
            <div class="form-group">
              <label for="setores">Setor</label>
              <select id="setores" name="setores" class='form-control'>
                <option value="1">Tecnologia da Informação</option>
                <option value="2">Recursos Humanos</option>
                <option value="3">Financeiro</option>
                <option value="4">Engenharia</option>
              </select>
            </div>
            <div class="form-group">
              <label for="setores">Cargo</label>
              <select id="cargos" name="cargos" class='form-control'>
                <option value="1">Estagiário</option>
                <option value="2">Assistente</option>
                <option value="3">Analista</option>
                <option value="4">Coordenador</option>
              </select>
            </div>
            <button type="submit" class="btn btn-dark mt-1">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
